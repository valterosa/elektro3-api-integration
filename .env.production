# Production environment variables for Vercel deployment
# Copy these variables to your Vercel project settings

# Configurações da API Elektro3
ELEKTRO3_API_URL=https://api.elektro3.com
ELEKTRO3_CLIENT_ID=your_client_id
ELEKTRO3_SECRET_KEY=your_secret_key
ELEKTRO3_USERNAME=your_username
ELEKTRO3_PASSWORD=your_password

# Configurações do Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app.vercel.app
SCOPES=read_products,write_products,read_customers,write_customers,read_orders,write_orders

# Database URL for Prisma - Use PostgreSQL on Vercel
# For SQLite in development, this is automatically handled
DATABASE_URL=postgresql://user:password@host:port/dbname
